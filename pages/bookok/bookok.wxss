.container{background:#99d6cf;background-image:url('https://snailgarden.shxgwl.com/xgwl/img/bg.jpg');background-size:cover;}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top:100px;
}

.h1{font-size:20px;text-align:center;padding:0 25px;}
.userinfo-avatar {
  width: 230rpx;
  height: 230rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #333;
  font-size:1.5em;
  margin-bottom:10px;
}

.btn{width:50%;margin:100px auto 0 auto;}
.btn button{font-size:14px;}
